
  <html lang="en">
  <head>
      <!-- Google web fonts -->
      <link href="http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700" rel='stylesheet' />
 	  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.css" />
	  <%- include('./partials/head'); %>
  </head>
  <body class="container">

    <header>
        <%- include('./partials/header'); %>
	</header>
	<div class="classic">Use this page to upload updates list of memberships and/or the list of authorized devices.  Simply drag-and-drop a .JSON file or click the "Browse" button.</div>
	
	<form action="/uploads" method="post" class="dropzone"  id="upload" enctype="multipart/form-data">
		<div id="drop" style="pointer-events: none;">
			Drop Here or...

			<br /><a>Browse</a>
			<input type="file" name="filename"  class="dz-message"/>
		</div>
		<div class="dz-error-message"><span data-dz-errormessage></span></div>
		<ul>
			<!-- droped files shown here -->
		</ul>
     </form>

	 <footer>
		<%- include('./partials/footer'); %>
	</footer>

		<!-- JavaScript Includes -->
 		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<script src="javascripts/jquery.knob.js"></script>
 		<script src="javascripts/jquery.ui.widget.js"></script>
		<script src="javascripts/jquery.iframe-transport.js"></script>
		<script src="javascripts/script.js"></script> 
		<script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.js"></script>	
		<script>
			Dropzone.options.upload = {
				  url:"/uploads",
				  maxFiles: 1,
				  clickable: true,
				  maxFilesize: 8, //mb
				  acceptedFiles: 'application/json',
				  dictDefaultMessage: ' ',
				  method: 'post',
				  createImageThumbnails: false,
				  autoDiscover: false,
				  disableClick: true,

				  accept: function(file, done) {
					console.log("uploaded");
					done();
				  },
				  init: function() {
					this.on("addedfile", function(event) {
						while (this.files.length > this.options.maxFiles) {
							this.removeFile(this.files[0]);
						}
					});
				  }
			};
		</script>
 </body>
</html>